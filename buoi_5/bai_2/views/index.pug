html
head
    title #{header}
    meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", rel="stylesheet")
    link(rel="stylesheet", href="/stylesheets/style.css")
body
    div.container
        h1.title Registration Form
        form(action="/user-info", method="post",enctype="application/x-www-form-urlencoded")
            div.row.form-name
                div.col-5
                    .form-group
                        label(for="firstname") First Name 
                        input.form-control(type="text" name="firstname" required)
                div.col-2
                div.col-5
                    .form-group 
                        label(for="lastname") Last Name 
                        input.form-control(type="text" name="lastname" required)
            div.row.form-birth-gender
                div.col-5
                    .form-group 
                        label(for="date") Birthday 
                        input.form-control(type="date" name="date")
                div.col-2
                div.col-5.form-gender
                    .form-group
                            label(for="gender") Giới tính
                                div.row.box-check-gender
                                    div.col-4
                                        .form-check
                                            input.form-check-input(type="radio" id="Male" value="Male" name="gender" required)
                                            label.form-check-label(for='Male') Male
                                    div.col-1
                                    div.col-4
                                        .form-check
                                            input.form-check-input(type="radio" id="Female" value="Female" name='gender' required)
                                            label.form-check-label(for='Female') Female
                div.row.form-email-number
                div.col-5
                    .form-group
                        label(for="email") Email 
                        input.form-control(type="email" name="email" required)
                div.col-2
                div.col-5
                    .form-group 
                        label(for="phone") Phone number 
                        input.form-control(type="text" name="phone" required)
            div.row.form-select-subject
                div.col-12
                    .form-group 
                        label(for='subject') Subject 
                        select.form-control(name='subject' required)
                            option(selected) Choose option
                            option(value='Somethingone') Something One 
                            option(value='Somethingtwo') Something Two 
            button.btn.btn-primary(type='submit') Submit

